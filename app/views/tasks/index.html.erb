<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
     <tr>
       <th>ID</th>
       <th>Body</th>
     </tr>

  </thead>


<tbody>
  <% @tasks.each do |task| %>
    <%# <%= render task %>
    
    <tr>
      <td> <%= task.name %> </td>
      <td> <%= task.task_id %> </td>
    </tr>


    <div>
      <%= link_to "Edit this task", edit_task_path(task_id) %> |
      <%# <%= link_to "Back to tasks", tasks_path %>

      <%= button_to "Destroy this task", @task, method: :delete %>
    </div>

  <% end %>
</tbody>


</table>
<%= link_to "New task", new_task_path %>
